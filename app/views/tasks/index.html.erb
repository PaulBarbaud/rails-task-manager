  <h1>Welcome to tasks</h1>

  <ul>
    <% @tasks.each do |task| %>
      <li>
        <%= link_to "#{task.title}", task_path(task) %>
      </li>
      <button>
      <%= link_to "Delete", task_path(task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </button>
    <% end %>
  </ul>

  <button>
    <%= link_to "Add a new task", new_task_path %>
  </button>
